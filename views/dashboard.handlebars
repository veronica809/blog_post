{{> navbar}}

<div class="container upperpadding">
    <h4>My blog posts:</h4>

  {{#each blogList}}
  <div class="row blogPostClick" id = {{this.dataValues.id}}>
    <div class="col s12 m12">
      <div class="card blue-grey darken-1 hoverable">
        <div class="card-content white-text">
          <span class="card-title">{{this.dataValues.title}}</span>
          <p>{{this.dataValues.body}}</p>
        </div>
        <div class="card-action">
          <p class="right">Posted by {{this.dataValues.User.dataValues.username}} on {{this.dataValues.createdAt}}</p>
        </div>
      </div>
    </div>
  </div>
  {{/each}}

