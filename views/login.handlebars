{{> navbar}}

<div class="container">
    <div class="row">
        <div class="col s12 m4 l2"></div>
        <div class="col s12 m4 l8 center-align">

            <div class="card-panel hoverable center-align">
                <div class="card-content">
                    <h5>
                        <span class="card-title">Account Login</span>
                    </h5>
                </div>
                <div class="row">
                    <form method="post" action="/users/login" class="col s12" id="login-form">
                        <div class="row">
                            <div class="input-field col s12">
                                <input placeholder="Please enter your username to login" id="login-username"
                                    type="text" class="validate" name="email">
                                <label for="email">Username</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input placeholder="Please enter your password" id="login-password" type="password"
                                    class="validate" name="password">
                                <label for="password">Password</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <button class="btn waves-effect waves-light" type="submit" name="action">Login
                                    <i class="material-icons right">send</i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-action">
                    <a href="/register">Register</a>
                </div>
            </div>

        </div>
        <div class="col s12 m4 l2"></div>

    </div>
</div>

<script src="/js/login.js"></script>