{{> navbar}}



<div class="container upperpadding">

    {{#if edit}}
        <div class="row">
            <form method="post" action="/dashboard" class="col s12" id="new-blog">
                <div class="row">
                    <div class="input-field col s6">
                        <textarea id="blog-title" class="materialize-textarea">{{title}}</textarea>
                        <label for="blog-title">Title</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="blog-content" class="materialize-textarea">{{body}} {{title}}</textarea>
                        <label for="blog-content">Content</label>
                    </div>
                </div>
            </form>
        </div>

    {{else}}
        <div class="row">
            <div class="col s12 m12">
            <div class="card blue-grey darken-1 hoverable z-depth-5">
                <div class="card-content white-text">
                <span class="card-title">{{title}}</span>
                <p>{{body}}</p>
                </div>
                <div class="card-action">
                <p class=>Posted by {{User.dataValues.username}} on {{createdAt}}</p>
                </div>
            </div>
            </div>
        </div>
    {{/if}}    
  <div class="row"> 
    {{!-- <blockquote class="right">
      This is an example quotation that uses the blockquote tag.This is an example quotation that uses the blockquote tag.
      <p>Comment by: Angel Garcia</p>
    </blockquote> --}}

    {{#if edit}}

    {{else}}

    <ul class="collapsible popout expandable">
        {{#each comments}}
        <li>
            <div class="collapsible-header"><i class="material-icons">comment</i>{{dataValues.comment}}</div>
            <div class="collapsible-body"><span>Comment by {{User.dataValues.username}}</span></div>
        </li>
        {{/each}}
    </ul>

    </div>
    <div class="row">
        <form method="post" action="/dashboard" class="col s11">
            <div class="row">
                <div class="input-field col s12">
                    <textarea id="newcomment" class="materialize-textarea"></textarea>
                    <label for="newcomment">Add Comment:</label>
                </div>
            </div>
        </form>
            <div class = "col s1">
                <a class="btn-floating btn-large waves-effect waves-light nursenotesNormalbtn ##607d8b blue-grey pulse newCommentBtn" id={{id}}><i class="material-icons">add</i></a>
            </div>
        </div>
    </div>
    {{/if}}

    {{#if canEdit}}

        {{#if edit}}
            <div class="row">
                <div class="col s2 offset-s4">
                    <a class="waves-effect waves-light btn blue-grey darken-1 done-blog" id={{id}}><i class="material-icons left">edit</i>Done Editing</a>
                    
                </div>
                <div class="col s2">
    
                    <a class="waves-effect waves-light btn red" id={{id}}><i class="material-icons left">delete</i>Delete Blog</a>
                </div>
            </div>

        {{else}}

        <div class="row">
            <div class="col s2 offset-s4">
                <a class="waves-effect waves-light btn blue-grey darken-1 edit-blog"  id={{id}}><i class="material-icons left">edit</i>Edit Blog</a>
                
            </div>
            <div class="col s2">
   
                <a class="waves-effect waves-light btn red delete-blog" id={{id}}><i class="material-icons left">delete</i>Delete Blog</a>
            </div>
        </div>
        {{/if}}
    {{/if}}

<script src="/js/post.js"></script>